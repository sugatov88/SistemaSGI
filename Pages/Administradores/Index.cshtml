@page
@model SistemaSGI.Pages.Administradores.IndexModel
@{
    ViewData["Title"] = "Lista de Administradores";


}
<div class=" = " container">
    <div class="row">
        <div class=" = " col-9">
            <h2 class=" text-info"> Lista de Administradores </h2>
        </div>
        <div class="col-3">
            <a class="btn btn-secondary" asp-page="/Administradores/Crear">Crear nueva Administrador</a>
        </div>
        <br />
        <br />
        @if (Model.Administradores.Count() > 0)
        {
            <table id="tblAdministradores" class="table table-striped table-bordered" style="width: 100%;">
                <thead>
                    <tr>
                        @*<th>@Html.DisplayFor(m => m.Administradores.FirstOrDefault().Id)</th>*@
                        <th>id </th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Documento</th>
                        <th>Direccion </th>
                        <th>Email</th>
                        <th>Telefono </th>
                   

                    </tr>
                </thead>
                <tbody>
                    @foreach (var Administradores in Model.Administradores)
                    {
                    <tr>
                        <td>@Html.DisplayFor(m => Administradores.Id)   </td>
                        <td> @Html.DisplayFor(m => Administradores.nombre)   </td>
                        <td>@Html.DisplayFor(m => Administradores.apellido)   </td>
                        <td> @Html.DisplayFor(m => Administradores.documento)   </td>
                        <td>@Html.DisplayFor(m => Administradores.direccion)   </td>
                        <td> @Html.DisplayFor(m => Administradores.email)   </td>
                        <td>@Html.DisplayFor(m => Administradores.telefono)   </td>
                       
                        <td>
                            <a class="btn btn-success" asp-page="../Administradores/Detalle" asp-route-id="@Administradores.Id"> Detalles</a>
                            <a class="btn btn-warning" asp-page="../Administradores/Editar" asp-route-id="@Administradores.Id"> Editar</a>
                            <a class="btn btn-danger" asp-page="../Administradores/Eliminar" asp-route-id="@Administradores.Id"> Eliminar</a>


                        </td>
                    </tr>
                    }

                </tbody>
            </table>

        }
        else
        {
            <p> no hay Administradores</p>
        }

    </div>

</div>