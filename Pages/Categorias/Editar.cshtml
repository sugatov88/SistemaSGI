@page
@model SistemaSGI.Pages.Categorias.EditarModel
@{
    ViewData["Title"] = "Editar categorias";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <h2 class="text-info">Editar Categoria</h2>

            <form method="post">

                <input type="hidden" asp-for="Categoria.Id"/>
                <div class="mb-3">
                    <label asp-for="Categoria.NombreCategoria" class="form-label"></label>
                    <input asp-for="Categoria.NombreCategoria" class="form-control" />
                    <span asp-validation-for="Categoria.NombreCategoria" class="text-danger"></span>

                </div>
                <button type="submit" class="btn btn-primary ">Guardar cambios</button>
            </form>
        </div>

    </div>
    <div class="row">
        <div class="col-6 ">
            <a asp-page="Index" class="btn btn-success"> Volver</a>
        </div>

    </div>
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

