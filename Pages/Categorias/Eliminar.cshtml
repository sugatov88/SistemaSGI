@page
@model SistemaSGI.Pages.Categorias.EliminarModel
@{
    ViewData["Title"] = "Eliminar categorias";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <h2 class="text-info">Eliminar Categoriacategoria</h2>

            <form method="post">

                <input type="hidden" asp-for="Categoria.Id"/>
                <div class="mb-3">
                    <label asp-for="Categoria.nombreCategoria" class="form-label"></label>
                    <input asp-for="Categoria.nombreCategoria" class="form-control" readonly/>
                    <span asp-validation-for="Categoria.nombreCategoria" class="text-danger"></span>

                </div>
                <button type="submit" class="btn btn-primary ">Eliminar categoria</button>
            </form>
        </div>

    </div>
    <div class="row">
        <div class="col-6 ">
            <a asp-page="Index" class="btn btn-success"> Volver</a>
        </div>

    </div>
</div>

