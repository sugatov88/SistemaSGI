@page
@model SistemaSGI.Pages.Categorias.IndexModel
@{
    ViewData["Title"] = "Categorias";


}
<div class=" = "container">
    <div class="row">
        <div class=" = "col-9">
            <h2 class=" text-info">categorias </h2>
        </div>
        <div class ="col-3">
            <a class="btn btn-secondary" asp-page="/Categorias/Crear">Agregar nuevo</a>
        </div>
        <br />
        <br />
        @if(Model.Categorias.Count()>0)
            {
    <table id="tblCategorias" class="table table-striped table-bordered" style="width: 100%;">
        <thead>
            <tr>
                @*<th>@Html.DisplayFor(m => m.Categorias.FirstOrDefault().Id)</th>*@
                <th>id </th>
                <th>Categoria</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var categorias in Model.Categorias)
            {
            <tr>                               
                <td>@Html.DisplayFor(m=>categorias.Id)   </td>
                <td> @Html.DisplayFor(m => categorias.NombreCategoria)   </td>
                <td>
                    <a class="btn btn-success" asp-page="../Categorias/Detalle" asp-route-id="@categorias.Id"> Detalles</a>
                    <a class="btn btn-warning" asp-page="../Categorias/Editar" asp-route-id="@categorias.Id"> Editar</a>
                    <a class="btn btn-danger" asp-page="../Categorias/Eliminar" asp-route-id="@categorias.Id"> Eliminar</a>


                </td>
            </tr>
            }

        </tbody>
    </table>

            }
            else
            {
    <p> no hay categorias</p>
            }

    </div>

</div>