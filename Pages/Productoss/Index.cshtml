@page
@model SistemaSGI.Pages.Productoss.IndexModel
@{
    ViewData["Title"] = "Lista de Productos";


}
<div class=" = " container">
    <div class="row">
        <div class=" = " col-9">
            <h2 class=" text-info">Productos </h2>
        </div>
        <div class="col-3">
            <a class="btn btn-secondary" asp-page="/Productoss/Crear">Agregar nuevo</a>
        </div>
        <br />
        <br />
        @if (Model.Productoss.Count() > 0)
        {
            <table id="tblProductoss" class="table table-striped table-bordered" style="width: 100%;">
                <thead>
                    <tr>
                        @*<th>@Html.DisplayFor(m => m.Productoss.FirstOrDefault().Id)</th>*@
                        <th>id </th>
                        <th>Nombre</th>
                        <th>Categoria </th>
                        <th>Unidades</th>
                        <th>Precio </th>
                        <th>Proveedor</th>
                        <th>Marca </th>
                        


                    </tr>
                </thead>
                <tbody>
                    @foreach (var Productoss in Model.Productoss)
                    {
                    <tr>
                        <td>@Html.DisplayFor(m => Productoss.Id)   </td>
                        <td> @Html.DisplayFor(m => Productoss.Nombre)   </td>
                      
                        <td> @Html.DisplayFor(m => Productoss.Categoria.NombreCategoria)   </td>
                        <td>@Html.DisplayFor(m => Productoss.Unidades)   </td>
                        <td> @Html.DisplayFor(m => Productoss.Precio)   </td>
                   
                        <td> @Html.DisplayFor(m => Productoss._proveedor.Nombre)   </td>
                        <td> @Html.DisplayFor(m => Productoss.Marca)   </td>

                        <td>
                            <a class="btn btn-success" asp-page="../Productoss/Detalle" asp-route-id="@Productoss.Id"> Detalles</a>
                            <a class="btn btn-warning" asp-page="../Productoss/Editar" asp-route-id="@Productoss.Id"> Editar</a>
                            <a class="btn btn-danger" asp-page="../Productoss/Eliminar" asp-route-id="@Productoss.Id"> Eliminar</a>


                        </td>
                    </tr>
                    }

                </tbody>
            </table>

        }
        else
        {
            <p> no hay Productos</p>
        }

    </div>

</div>